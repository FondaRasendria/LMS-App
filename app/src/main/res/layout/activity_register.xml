<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/regis"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/welcome"
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat Datang Para Pelajar! "
        android:fontFamily="@font/poppins"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/desk"
        android:layout_below="@id/welcome"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Satu akun untuk akses semua fitur menarik yang ada di StudyGo"
        android:fontFamily="@font/pop_reg"
        android:textSize="14sp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/nm"
        android:layout_below="@+id/desk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:textColor="@color/black"
        android:fontFamily="@font/pop_med"/>

    <EditText
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox"
        android:layout_below="@+id/nm"
        android:height="40dp"
        android:hint="Nama"
        android:fontFamily="@font/pop_reg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/kls"
        android:layout_below="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kelas"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:textColor="@color/black"
        android:fontFamily="@font/pop_med"/>

    <EditText
        android:id="@+id/kelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox"
        android:layout_below="@+id/kls"
        android:height="40dp"
        android:hint="Kelas"
        android:fontFamily="@font/pop_reg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/eml"
        android:layout_below="@+id/kelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="@font/pop_med"
        android:textSize="18sp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox"
        android:layout_below="@+id/eml"
        android:height="40dp"
        android:hint="Email"
        android:fontFamily="@font/pop_reg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/pw"
        android:layout_below="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:fontFamily="@font/pop_med"
        android:textSize="18sp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox"
        android:layout_below="@+id/pw"
        android:height="40dp"
        android:hint="Password"
        android:fontFamily="@font/pop_reg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:gravity="center"
        android:maxLines="1"/>

    <Button
        android:id="@+id/btnregis"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Buat Akun"
        android:fontFamily="@font/poppins"
        android:layout_below="@+id/password"
        android:backgroundTint="@color/btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"/>










</RelativeLayout>
