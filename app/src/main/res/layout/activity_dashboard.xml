<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:background="@color/bg">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:src="@drawable/logo"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/btn">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/smngt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semangat Mendidik"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/pop_smbold"
            android:layout_marginTop="20dp"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nadiem Makarim"
            android:layout_below="@+id/smngt"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:textSize="25dp"
            android:layout_marginLeft="25dp"
            />
            
            <TextView
                android:id="@+id/kelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wali kelas XI 2"
                android:layout_below="@+id/user"
                android:fontFamily="@font/pop_med"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="20dp"/>
            
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mata Pelajaran"
        android:layout_below="@+id/card"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:fontFamily="@font/pop_smbold"
        android:layout_marginLeft="35dp"/>


</RelativeLayout>